<div class="needs-validation" novalidate>
    {{ form_start(form) }}
    <div class="row g-3">

        <div class="col-sm-6">
            {{ form_row(form.nom) }}
        </div>

        <div class="col-sm-6">
            {{ form_row(form.prenom) }}
        </div>

        <div class="col-6">
            {{ form_row(form.email) }}
        </div>

        <div class="col-6">
            {{ form_row(form.telephone) }}
        </div>

    </div>

    <hr class="my-4">
    <button class="w-100 btn btn-primary btn-lg" type="submit">{% if edit==0 %}Ajouter{% else %} Modifier {% endif
        %}</button>
    {{ form_end(form) }}

</div>
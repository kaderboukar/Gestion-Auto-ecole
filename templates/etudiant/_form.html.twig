<div class="needs-validation" novalidate>
    {{ form_start(form) }}
    <div class="row g-3">

        <div class="col-sm-6">
            {{ form_row(form.nom) }}
        </div>

        <div class="col-sm-6">
            {{ form_row(form.prenom) }}
        </div>

        <div class="col-6">
            {{ form_row(form.email) }}
        </div>

        <div class="col-6">
            {{ form_row(form.telephone) }}
        </div>
        <div class="col-6">
            {{ form_label(form.password.first) }}{{ form_widget(form.password.first) }}
        </div>

        <div class="col-6">
            {{ form_row(form.password.second) }}
        </div>

        <span class="text-danger">{{ form_errors(form.password.first) }}</span>

    </div>

    <hr class="my-4">

    <button class="w-100 btn btn-primary btn-lg" type="submit">S'inscrire</button>
    {{ form_end(form) }}

</div>